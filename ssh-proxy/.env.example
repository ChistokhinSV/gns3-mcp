# SSH Proxy Service Configuration

# API port
API_PORT=8022

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Buffer management
MAX_BUFFER_SIZE=10485760  # 10MB
TRIM_BUFFER_SIZE=5242880   # 5MB

# Command history
MAX_HISTORY_JOBS=1000  # Per session

# ============================================================================
# Proxy Discovery Configuration (Main Proxy Only)
# ============================================================================
# Required only for main proxy on GNS3 host (with Docker socket mounted)
# Lab proxies inside GNS3 don't need these settings

# GNS3 server connection
GNS3_HOST=localhost
GNS3_PORT=80
GNS3_USERNAME=admin
GNS3_PASSWORD=your-gns3-password

# Note: Main proxy also needs Docker socket mounted:
#   -v /var/run/docker.sock:/var/run/docker.sock:ro
