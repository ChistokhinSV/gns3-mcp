# GNS3 MCP Server - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# GNS3 Server Connection
# ============================================================================

# GNS3 server IP address or hostname
GNS3_HOST=192.168.1.20

# GNS3 API port (default: 80 for HTTP, 443 for HTTPS)
GNS3_PORT=80

# GNS3 authentication credentials
GNS3_USER=admin
GNS3_PASSWORD=your-gns3-password

# Use HTTPS for GNS3 API connection (true/false)
GNS3_USE_HTTPS=false

# Verify SSL certificates (set to false for self-signed certs)
GNS3_VERIFY_SSL=true

# ============================================================================
# MCP HTTP Server Configuration
# ============================================================================

# HTTP server listen address (use 0.0.0.0 in Docker for external access)
HTTP_HOST=0.0.0.0

# HTTP server port (default: 8000)
HTTP_PORT=8000

# MCP API authentication key (leave empty for auto-generation)
# If empty, a random key will be generated and logged on startup
MCP_API_KEY=

# ============================================================================
# Logging Configuration
# ============================================================================

# Python logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# SSH Proxy Configuration (optional, for advanced use)
# ============================================================================

# SSH proxy API port (default: 8022)
# Only change if port conflict occurs
# API_PORT=8022

# SSH session buffer limits (bytes)
# MAX_BUFFER_SIZE=10485760      # 10 MB - maximum buffer size
# TRIM_BUFFER_SIZE=5242880      # 5 MB - trim to this size when max exceeded

# Maximum SSH command history entries to keep
# MAX_HISTORY_JOBS=1000

# ============================================================================
# Docker Compose Overrides (optional)
# ============================================================================

# Uncomment to override default container settings
# These are primarily for docker-compose.yml customization

# Container restart policy (unless-stopped, always, on-failure, no)
# RESTART_POLICY=unless-stopped

# Health check interval (seconds)
# HEALTHCHECK_INTERVAL=30

# Health check timeout (seconds)
# HEALTHCHECK_TIMEOUT=10
